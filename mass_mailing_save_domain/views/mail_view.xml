<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="save_mailing_domain_wizard_form" model="ir.ui.view">
            <field name="name">Mailing Domains</field>
            <field name="model">mailing.domain.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="mailing_domain"/>
                    </group>
                    <footer>
                        <!--
                        <button name="create_units" type="object"
                                string="Create" class="oe_highlight"/>
                        -->
                        <button class="btn btn-secondary oe_button oe_form_button"
                                special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="save_mailing_domain_wizard_action" model="ir.actions.act_window">
            <field name="name">Mailing Domain Wizard</field>
            <field name="res_model">mailing.domain.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_mail_mass_mailing_form" model="ir.ui.view">
            <field name="name">Changes to mailing (domain)</field>
            <field name="model">mailing.mailing</field>
            <field name="priority" eval="160"/>
            <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='mailing_domain']" position="after">
                    <div style="text-align:right;">
                        <button name="save_domain" type="action"
                                string="SAVE DOMAIN"
                                action="%(save_mailing_domain_wizard_action)d"
                                attrs="{'invisible':[('mailing_domain','=',False)]}"
                                context="{'default_mailing_domain':mailing_domain}"/>
                    </div>
                </xpath>

                <xpath expr="//field[@name='mailing_domain']" position="before">
                    <label for="mailing_domain_id"/>
                    <field name="mailing_domain_id"/>
                </xpath>
            </field>
        </record>



        <record id="mailing_domain_filter" model="ir.ui.view">
            <field name="name">Mailing Domain</field>
            <field name="model">mailing.domain</field>
            <field name="arch" type="xml">
                <search string="Mailing Domain">
                    <field name="name"/>
                    <separator/>
                    <filter string="Archived" name="inactive"
                            domain="[('active', '=', False)]"/>
               </search>
            </field>
        </record>

        <record id="mailing_domain_form" model="ir.ui.view">
            <field name="name">Mailing Domains</field>
            <field name="model">mailing.domain</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="mailing_domain"/>
                                <field name="active"/>
                            </group>
                        </group>
                </sheet>
                </form>
            </field>
        </record>

        <record id="mailing_domain_list_tree" model="ir.ui.view">
            <field name="name">Mailing Domains</field>
            <field name="model">mailing.domain</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="mailing_domain"/>
                </tree>
            </field>
        </record>

        <record id="mailing_domain_list_action" model="ir.actions.act_window">
            <field name="name">Mailing Domains</field>
            <field name="res_model">mailing.domain</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_mailing_domain"
                    name="Mailing Domains"
                    parent="mass_mailing.mass_mailing_configuration"
                    action="mailing_domain_list_action"
                    sequence="4"/>

    </data>
</odoo>
