<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="crm_crm_lead_view_form">
            <field name="name">Lead</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="original_source"/>
                    <field name="recycled"/>
                </xpath>

                <xpath expr="//page[last()]" position="after">
                    <page string="MQL" name="mql">
                        <group>
                            <group>
                                <field name="mql_date"/>
                                <field name="mql_recycle_counter"/>
                                <field name="mql_recycle_store"/>
                                <field name="mql_type"/>
                                <field name="mql_type_date"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="crm_crm_lead_view_tree_inherited">
            <field name="name">Lead Inherited</field>
            <field name="model">crm.lead</field>
            <field name="priority">16</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_leads"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="mql_type" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
