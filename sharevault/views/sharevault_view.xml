<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_sharevault_filter" model="ir.ui.view">
            <field name="name">sharevault.list.select</field>
            <field name="model">sharevault.sharevault</field>
            <field name="arch" type="xml">
                <search string="Search ShareVaults">
                    <field name="sharevault_name"/>
                    <field name="sv_type"/>
                    <field name="sharevault_owner"/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="groupby_sv_type" string="Type"
                                context="{'group_by' : 'sv_type'}"/>
                        <filter name="groupby_sharevault_owner" string="Owner"
                                context="{'group_by': 'sharevault_owner'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="view_sharevault_kanban">
            <field name="name">sharevault.kanban</field>
            <field name="model">sharevault.sharevault</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="sharevault_name"/>
                    <field name="sv_type"/>
                    <field name="sharevault_owner"/>
                    <field name="sv_creation_dt"/>
                    <field name="sv_expiration_dt"/>
                    <field name="locked_unlocked"/>
                    <field name="kanban_name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top mb16">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <t t-esc="record.sharevault_name.value"/>
                                            <span t-if="record.sv_type.value">(<field name="sv_type"/>)
                                            </span>
                                        </strong>
                                    </div>
                                    <strong>
                                        <field name="sv_creation_dt"/> - <field name="sv_expiration_dt"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <span t-if="record.kanban_name.value">
                                            <field name="kanban_name"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <p t-if="record.locked_unlocked.raw_value == 'locked'">Locked\</p>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_sharevault_tree" model="ir.ui.view">
            <field name="name">sharevault.sharevault.tree</field>
            <field name="model">sharevault.sharevault</field>
            <field name="arch" type="xml">
                <tree string="ShareVaults">
                    <field name="sharevault_owner"/>
                    <field name="sharevault_name"/>
                    <field name="sv_type"/>
                    <field name="sv_creation_dt"/>
                    <field name="sv_expiration_dt"/>
                    <field name="dt_last_login"/>
                    <field name="term_start_date"/>
                    <field name="term_end_date"/>
                </tree>
            </field>
        </record>

        <record id="view_sharevault_form" model="ir.ui.view">
            <field name="name">sharevault.form</field>
            <field name="model">sharevault.sharevault</field>
            <field name="arch" type="xml">
                <form string="ShareVault">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="sharevault_name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="key"/>
                                <!--SV-66 : add new fields to Sharevault Module-->
                                <field name="title"/>
                                <field name="contact_email"/>
                                <field name="contact_phone"/>
                            </group>
                            <group>
                                <field name="sv_type"/>
                                <field name="lead_id"/>
                                <field name="sharevault_id"/>
                                <field name="company_id" invisible="0" domain="[('is_company','=',True)]"/>
                            </group>
                        </group>
                        <group>
                            <group string="Owner">
                                <field name="sharevault_owner"
                                        widget="res_partner_many2one"
                                        domain="[('is_company','=',False)]"
                                        context="{'show_address': 1, 'show_vat': True}"
                                        options='{"always_reload": True}'/>
                                <field name="partner_id_title" readonly="1"/>
                                <field name="partner_id_email" readonly="1"/>
                                <field name="partner_id_phone" readonly="1"/>
                            </group>
                            <group string="Dates">
                                <field name="sv_creation_dt"/>
                                <field name="sv_expiration_dt"/>
                                <field name="dt_last_upload"/>
                                <field name="dt_last_download"/>
                                <field name="dt_last_login"/>
                                <field name="term_start_date"/>
                                <field name="term_end_date"/>
                            </group>
                        </group>
                        <group>
                            <group string="Quotas">
                                <field name="quota_pages"/>
                                <field name="quota_users"/>
                                <field name="quota_mb"/>
                            </group>
                            <group string="Utilization">
                                <field name="util_pages"/>
                                <field name="util_users"/>
                                <field name="util_mb"/>
                            </group>
                        </group>
                        <group>
                            <group string="Totals">
                                <field name="total_logins"/>
                                <field name="total_tags"/>
                                <field name="total_tag_value"/>
                                <field name="total_groups"/>
                            </group>
                            <group string="Misc">
                                <field name="uncounted_filesize_mb"/>
                                <field name="locked_unlocked"/>
                                <field name="published_last_30_days_mb"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem id="sharevault_menu_root"
            name="ShareVault"
            web_icon="sharevault,static/description/icon.png"
            active="True"
            sequence="1"
            groups="sharevault.sharevault_manager"/>

        <menuitem id="sharevault_menu"
            name="ShareVaults"
            parent="sharevault_menu_root"
            sequence="2"/>

        <record id="action_sharevault_sharevault" model="ir.actions.act_window">
            <field name="name">ShareVault</field>
            <field name="res_model">sharevault.sharevault</field>
            <field name="view_mode">kanban,form,tree</field>
            <field name="search_view_id" ref="view_sharevault_filter"/>
        </record>

        <menuitem id="sharevault_sharevault_menu"
            name="ShareVaults"
            parent="sharevault_menu"
            action="action_sharevault_sharevault"
            sequence="4"/>
    </data>
</odoo>
