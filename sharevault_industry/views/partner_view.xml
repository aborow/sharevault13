<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sharevault_fields_subindustry_tree" model="ir.ui.view">
            <field name="name">Sub Industry</field>
            <field name="model">res.partner.subindustry</field>
            <field name="inherit_id" ref="sharevault.sharevault_fields_subindustry_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='industry_id']" position="replace"/>
                <xpath expr="//field[@name='accindustry_id']" position="replace"/>
            </field>
        </record>

        <record id="res_partner_industry_view_tree" model="ir.ui.view">
            <field name="name">Industry</field>
            <field name="model">res.partner.industry</field>
            <field name="inherit_id" ref="base.res_partner_industry_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[last()]" position="after">
                    <field name="accindustry_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">Add industry tags</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="sharevault.view_partner_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='industry_id']" position="replace"/>

                <xpath expr="//field[@name='subindustry_id']" position="before">
                    <field name="industry_id"
                            attrs="{'invisible': [('parent_id', '!=', False)]}"
                            options="{'no_create': True}"/>
                </xpath>

                <xpath expr="//field[@name='subindustry_id']" position="replace">
                    <field name="subindustry_id"
                            attrs="{'invisible': [('parent_id', '!=', False)]}"/>
                    <!--
                            domain="[('industry_id', '=', industry_id)]"
                    -->
                </xpath>

                <xpath expr="//field[@name='subindustry_id']" position="after">
                    <field name="industry_tag_ids"
                            widget="many2many_tags"
                            options="{'color_field': 'color'}"
                            string="Industry (TAGS)"
                            attrs="{'invisible': [('parent_id', '!=', False)]}"/>
                </xpath>
            </field>
        </record>

        <record id="sharevault_industry_tag_tree" model="ir.ui.view">
            <field name="name">Industry (TAGS)</field>
            <field name="model">res.partner.industry_tag</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="display_name"/>
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="sharevault_industry_tag_filter" model="ir.ui.view">
            <field name="name">Industry (TAGS)</field>
            <field name="model">res.partner.industry_tag</field>
            <field name="arch" type="xml">
                <search string="Search Industry tags">
                    <field name="name"/>
                    <field name="parent_id"/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="groupby_parent_id" string="Parent"
                                context="{'group_by' : 'parent_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="sharevault_industry_tag_action" model="ir.actions.act_window">
            <field name="name">Industry (TAGS)</field>
            <field name="res_model">res.partner.industry_tag</field>
            <field name="view_mode">tree</field>
            <field name="domain">[('active','in',[True,False])]</field>
        </record>

        <menuitem id="sharevault_menu_fields_industry_tag"
            name="Industry (TAGS)"
            parent="sharevault.sharevault_menu_fields_root"
            action="sharevault_industry.sharevault_industry_tag_action"
            sequence="4"/>


        <menuitem id="sharevault_menu_fields_industry"
            name="Industry"
            parent="sharevault.sharevault_menu_fields_root"
            action="base.res_partner_industry_action"
            sequence="3"/>

    </data>
</odoo>
