<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_res_partner_filter" model="ir.ui.view">
            <field name="name">Partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="sharevault.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[last()]" position="after">
                    <field name="subindustry_ids"/>
                </xpath>
            </field>
        </record>


        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">Change subindustry</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="sharevault.view_partner_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='subindustry_id']" position="after">
                    <field name="subindustry_ids"
                            widget="many2many_tags"
                            options="{'color_field': 'color'}"
                            domain="[('industry_id', '=', industry_id)]"
                            string="Sub Industry (TAGS)"/>
                </xpath>
            </field>
        </record>


        <record id="sharevault_fields_subindustry_tree" model="ir.ui.view">
            <field name="name">Sub Industry</field>
            <field name="model">res.partner.subindustry</field>
            <field name="inherit_id" ref="sharevault.sharevault_fields_subindustry_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="parent_id" string="Parent"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
