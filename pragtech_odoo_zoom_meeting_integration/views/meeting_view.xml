        <record id="event_event_view_form_inherit_for_zoom" model="ir.ui.view">
            <field name="name">event.event.view.form.inherit.zoom</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_tz']" position="after">
                    <field name="password"
                           attrs="{'invisible':[('meet_flag', '=', False)],'required': [('meet_flag','=',True)]}"/>
                    <field name="meet_flag"/>
                    <field name="zoom_event_type"
                           attrs="{'invisible':[('meet_flag', '=', False)],'required': [('meet_flag','=',True)]}"/>
                </xpath>
                <xpath expr="//page[1]" position="after">
                    <page string="Zoom Meet">
                        <group>
                            <group>
                                <field name="create_flag" readonly="True"/>
                                <field name="meet_id" readonly="True"/>
                                <field name="meet_pwd" readonly="True"/>
                                <field name="meet_url" readonly="True"
                                       attrs="{'invisible':[('create_flag', '=', False)]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="event_registration_view_form_inherit_for_zoom" model="ir.ui.view">
            <field name="name">event.registration.view.form.inherit.zoom</field>
            <field name="model">event.registration</field>
            <field name="priority">16</field>
            <field name="inherit_id" ref="event.view_event_registration_form"/>
            <field name="arch" type="xml">
                <group name="event" position="after">
                    <group string="Zoom Meeting Details">
                        <field name="meet_url"/>
                        <field name="meet_id"/>
                        <field name="meet_pwd"/>
                        <field name="registrant_id"/>
                        <field name="start_time"/>
                        <field name="topic"/>
                    </group>
                </group>
            </field>
        </record>

    </data>
