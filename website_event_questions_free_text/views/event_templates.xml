<odoo>

    <template id="registration_attendee_details_questions" inherit_id="website_event_questions.registration_attendee_details_questions">
        <xpath expr="//t[@t-if='event.specific_question_ids']" position="replace">
            <t t-if="event.specific_question_ids">
                <div t-foreach="event.specific_question_ids" t-as="question" class="row">
                    <div class="col-lg-6 mt-2">
                        <label t-esc="question.title"/>
                        <select t-if="not question.free_text" t-attf-name="#{counter}-answer_ids-#{question.id}" class="custom-select" required="true">
                            <t t-foreach="question.answer_ids" t-as="answer">
                                <option t-esc="answer.name" t-att-value="answer.id"/>
                            </t>
                        </select>
                        <input
                            t-if="question.free_text"
                            class="form-control"
                            type="text"
                            required="true"
                            t-attf-name="#{counter}-answer_free_text-#{question.id}"
                        />
                    </div>
                </div>
            </t>
        </xpath>
        <xpath expr="//t[@t-if='event.general_question_ids']" position="replace">
            <t t-if="event.general_question_ids">
                <div class="modal-body bg-light border-bottom">
                    <div t-foreach="event.general_question_ids" t-as="question" class="row">
                        <div class="col-lg-6">
                            <label class="h5" t-esc="question.title"/>
                            <select t-if="not question.free_text" t-attf-name="0-answer_ids-#{question.id}" class="custom-select" required="true">
                                <t t-foreach="question.answer_ids" t-as="answer">
                                    <option t-esc="answer.name" t-att-value="answer.id"/>
                                </t>
                            </select>
                            <input
                                t-if="question.free_text"
                                class="form-control"
                                type="text"
                                required="true"
                                t-attf-name="0-answer_free_text-#{question.id}"
                            />
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>

</odoo>
