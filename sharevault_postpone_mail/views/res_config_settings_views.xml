<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">Add email postponing days</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="mail.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='emails']" position="after">
                    <h2>Email postponing (Set the days when marketing emails should not be sent)</h2>
                    <div class="row mt16 o_settings_container" id="email_postponing">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="postpone_email_sunday"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="postpone_email_sunday"/>
                                <div class="text-muted" id="postpone_email_sunday">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="postpone_email_thursday"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="postpone_email_thursday"/>
                                <div class="text-muted" id="postpone_email_thursday">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="postpone_email_monday"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="postpone_email_monday"/>
                                <div class="text-muted" id="postpone_email_monday">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="postpone_email_friday"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="postpone_email_friday"/>
                                <div class="text-muted" id="postpone_email_friday">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="postpone_email_tuesday"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="postpone_email_tuesday"/>
                                <div class="text-muted" id="postpone_email_tuesday">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="postpone_email_saturday"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="postpone_email_saturday"/>
                                <div class="text-muted" id="postpone_email_saturday">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="postpone_email_wednesday"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="postpone_email_wednesday"/>
                                <div class="text-muted" id="postpone_email_wednesday">
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
