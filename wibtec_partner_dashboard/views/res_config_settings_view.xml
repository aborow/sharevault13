<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">Partner Dasboard</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='contacts_settings']/div[@class='row mt16 o_settings_container']" position="after">
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-12 o_setting_box"
                            title=""
                            id="partner_dashboard">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane" id="partner_dashboard_settings">
                                <label for="partner_dashboard_action_ids"
                                        string="Dashboard views"/>
                                <div class="text-muted">
                                    <field name="partner_dashboard_action_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="domain"/>
                                        </tree>
                                    </field>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
