<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record model="ir.model.fields" id="mail_activity_x_partner_id">
            <field name="name">x_partner_id</field>
            <field name="field_description">Partner</field>
            <field name="model_id" ref="mail.model_mail_activity"/>
            <field name="ttype">many2one</field>
            <field name="store" eval="True"/>
            <field name="relation">res.partner</field>
            <field name="depends">res_id,res_model</field>
            <field name="compute">
for rec in self:
  if rec['res_id'] and rec['res_model']:
    if rec['res_model'] == 'res.partner':
      rec['x_partner_id'] = rec['res_id']
    else:
      try:
        aux_rec = self.env[rec['res_model']].browse(rec['res_id'])
        rec['x_partner_id'] = aux_rec.partner_id.id
      except Exception as e:
        pass
            </field>
        </record>


        <record model="ir.model.fields" id="res_partner_x_partner_id">
            <field name="name">x_partner_id</field>
            <field name="field_description">Partner (parent)</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="ttype">many2one</field>
            <field name="store" eval="True"/>
            <field name="relation">res.partner</field>
            <field name="related">parent_id</field>
        </record>

    </data>
</odoo>
