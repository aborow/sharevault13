<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- form view of Import Invoices -->
		<record id="import_iv_wizard" model="ir.ui.view">
			<field name="name">Import Invoices</field>
			<field name="model">import.iv</field>
			<field name="arch" type="xml">
				<form string="Import IV">
					<div class="card bg-light">
						<div class="card-body"><i class="fa fa-fw fa-file"/> Please upload CSV formated file.</div> 
					</div>
					<group>
						<group>
							<field name="file" filename="name"/>
							<field name="journal_id"/>
						</group>
					</group>
					<footer>
						<button name="import_iv" string="Import" type="object" class="oe_highlight"/>
						<button name="Cancel" string="Cancel" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<!-- Action for Import IV -->
		<record id="action_import_iv" model="ir.actions.act_window">
			<field name="name">Import IV</field>
			<field name="res_model">import.iv</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<!-- Menuitem for Import IV -->
		<menuitem id="menu_iv_import" name="Import IV"
        action="action_import_iv" parent="account.menu_finance_receivables" sequence="10"/>

	</data>
</odoo>