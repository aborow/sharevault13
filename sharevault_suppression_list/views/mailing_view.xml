<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mail_blacklist_view_form" model="ir.ui.view">
            <field name="name">Mail Suppression List</field>
            <field name="model">mail.blacklist</field>
            <field name="inherit_id" ref="mail.mail_blacklist_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[last()]" position="after">
                    <field name="suppression_list_id" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record id="mail_blacklist_view_search" model="ir.ui.view">
            <field name="name">Mail Suppression List</field>
            <field name="model">mail.blacklist</field>
            <field name="inherit_id" ref="mail.mail_blacklist_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[last()]" position="after">
                    <field name="suppression_list_id"/>
                    <group expand="0" name="group_by" string="Group By">
                        <filter name="group_suppression_list_id" string="Suppression List"
                                context="{'group_by': 'suppression_list_id'}"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="mail_blacklist_view_tree" model="ir.ui.view">
            <field name="name">Mail Suppression List</field>
            <field name="model">mail.blacklist</field>
            <field name="inherit_id" ref="mail.mail_blacklist_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[last()]" position="after">
                    <field name="suppression_list_id"/>
                </xpath>
            </field>
        </record>



        <record id="sharevault_mail_suppression_list_filter" model="ir.ui.view">
            <field name="name">Mail Suppression List</field>
            <field name="model">mail.suppression_list</field>
            <field name="arch" type="xml">
                <search string="Search suppression list">
                    <field name="name"/>
                    <separator/>
                    <filter string="Use in Webforms" name="filter_use_in_webform"
                            domain="[('use_in_webform', '=', True)]"/>
                    <filter string="Use in Mailings" name="filter_use_in_mailing"
                            domain="[('use_in_mailing', '=', True)]"/>
                </search>
            </field>
        </record>

        <record id="sharevault_mail_suppression_list_tree" model="ir.ui.view">
            <field name="name">Mail Suppression List</field>
            <field name="model">mail.suppression_list</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                    <field name="use_in_webform"/>
                    <field name="use_in_mailing"/>
                    <field name="create_date"/>
                    <field name="contact_count" invisible="1"/>
                    <button name="%(mail.mail_blacklist_action)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-address-book"
                            context="{'search_default_suppression_list_id': active_id}"
                            title="List Contacts"
                            attrs="{'invisible':[('contact_count','=',0)]}">
                    </button>
                </tree>
            </field>
        </record>

        <record id="sharevault_mail_suppression_list_action" model="ir.actions.act_window">
            <field name="name">Mail Suppression List</field>
            <field name="res_model">mail.suppression_list</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="sharevault_menu_mail_suppression_list"
                    name="Suppression List"
                    parent="mass_mailing.mass_mailing_configuration"
                    action="sharevault_mail_suppression_list_action"
                    sequence="4"/>

    </data>
</odoo>
