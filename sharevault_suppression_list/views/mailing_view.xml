<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sharevault_mail_suppression_list_filter" model="ir.ui.view">
            <field name="name">Mail Suppression List</field>
            <field name="model">mail.suppression_list</field>
            <field name="arch" type="xml">
                <search string="Search suppression list">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="sharevault_mail_suppression_list_tree" model="ir.ui.view">
            <field name="name">Mail Suppression List</field>
            <field name="model">mail.suppression_list</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="sharevault_mail_suppression_list_action" model="ir.actions.act_window">
            <field name="name">Mail Suppression List</field>
            <field name="res_model">mail.suppression_list</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="sharevault_menu_mail_suppression_list"
                    name="Suppression List"
                    parent="mass_mailing.mass_mailing_configuration"
                    action="sharevault_mail_suppression_list_action"
                    sequence="4"/>

    </data>
</odoo>
