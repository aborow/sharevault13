<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Historical Info Tab added in Form View of Invoices-->
        <record id="account_move_from_inherit_for_hist_info" model="ir.ui.view">
            <field name="name">account.move.form.inherit.for.hist.info</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@id='other_tab_entry']" position="after">
                    <page id="hist_info_tab" string="Historical Info" name="hist_info" attrs="{'invisible': [('type', '!=', 'entry')]}">
                        <field name="hist_qba_type_ids">
                            <tree editable="bottom" string="Historical Info">
                                <!-- Displayed fields -->
                                <field name="hist_pqb_name"/>
                                <field name="hist_item"/>
                                <field name="hist_qty"/>
                                <field name="hist_sales_price"/>
                                <field name="hist_qb_acc_type"/>
                            </tree>
                        </field>
                        <group id="hist_tab_entry_group">
                            <group>
                                <field name="hist_type"/>
                                <field name="hist_num"/>
                                <field name="hist_sv_name"/>
                            </group>
                            <group>
                                <field name="hist_rep"/>
                                <field name="hist_pay_method"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <!--Historical Info in Search View of Invoices-->
        <record id="account_move_select_search_inherit_for_hist_info" model="ir.ui.view">
            <field name="name">account.move.select.inherit.for.hist.info</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_move_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="hist_type"/>
                    <field name="hist_num"/>
                    <field name="hist_sv_name"/>
                    <field name="hist_rep"/>
                    <field name="hist_pay_method"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
