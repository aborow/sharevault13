<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_view_form_inherit_open_tab" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.open.tab</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='child_ids']/kanban/field[@name='color']" position="after">
                <field name="id"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']/kanban//field[@name='name']" position="before">
                <div style="float: right;font-size: 18px;">
                     <field name="id" widget="open_tab"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>