<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="website_change_footer" model="ir.ui.view">
        <field name="name">ShareVault: change footer</field>
        <field name="model">ir.ui.view</field>
        <field name="inherit_id" search="[('key','=','web.frontend_layout')]"/>
        <field name="arch" type="xml">
            <xpath expr="//footer[@id='bottom']" position="replace">
                <footer t-if="not no_footer" id="bottom" data-anchor="true" class="bg-light o_footer" style="background-color:#fff;">
                  <div class="o_footer_copyright" style="background-color:#fff;color:#000;">
                    <div class="container py-3">
                        <div class="row">
                            <div class="col-sm text-center text-sm-center text-muted">
                              <img src="/web/image/6160/footer_logo.png" width="250px;"/>
                              <h2 style="font-weight:bold;color:#000;">
                              Copyright Â© 2020 <span t-field="res_company.name" itemprop="name">Company name</span>. All rights reserved. |
                              <a href="" style="color:#169ded;">Privacy Policy</a>
                              </h2>
                            </div>
                        </div>
                    </div>
                  </div>
              </footer>
            </xpath>
        </field>
    </record>


    <record id="website_pages_form_view" model="ir.ui.view">
        <field name="name">ShareVault: add fields</field>
        <field name="model">website.page</field>
        <field name="inherit_id" ref="website.website_pages_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_published']" position="before">
                <field name="is_template"/>
            </xpath>
        </field>
    </record>

    <record id="website_pages_tree_view" model="ir.ui.view">
        <field name="name">ShareVault: add field</field>
        <field name="model">website.page</field>
        <field name="inherit_id" ref="website.website_pages_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_published']" position="before">
                <field name="is_template"/>
            </xpath>

            <xpath expr="//field[last()]" position="after">
                <button name="call_create_page_wizard"
                        string="Create"
                        type="object"
                        attrs="{'invisible':[('is_template','=',False)]}"/>
            </xpath>

        </field>
    </record>



    <record id="website_pages_view_search" model="ir.ui.view">
        <field name="name">ShareVault: add filter</field>
        <field name="model">website.page</field>
        <field name="inherit_id" ref="website.website_pages_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='not_published']" position="after">
                <separator/>
                <filter string="Template" name="is_template" domain="[('is_template', '=', True)]"/>
            </xpath>
        </field>
    </record>



    <record id="action_template_pages" model="ir.actions.act_window">
            <field name="name">Page Templates</field>
            <field name="res_model">website.page</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_template','=',True)]</field>
            <field name="context">{'default_is_template':True}</field>
        </record>

    <menuitem id="menu_template_pages"
                name="Page Templates"
                action="action_template_pages"
                parent="website.menu_website_global_configuration"
                sequence="31"/>


</odoo>
