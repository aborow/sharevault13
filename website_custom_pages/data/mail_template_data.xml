<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="email_template_thank_you" model="mail.template">
            <field name="name">ShareVault: Thank You Message</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="subject">Thank you!</field>
            <field name="email_from">${(object.create_uid.email_formatted or user.email_formatted) | safe}</field>
            <field name="email_to">${object.email_from}</field>
            <field name="body_html"></field>
            <field name="user_signature" eval="False"/>
            <field name="auto_delete" eval="False"/>
        </record>

    </data>
</odoo>
