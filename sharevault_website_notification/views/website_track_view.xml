<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="website_page_form_inherited" model="ir.ui.view">
            <field name="name">website.page.form.inherited</field>
            <field name="model">website.page</field>
            <field name="priority">16</field>
            <field name="inherit_id" ref="website.website_pages_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='track']" position="after">
                    <field name="notify"/>
                </xpath>
            </field>
        </record>

        <record id="website_visitor_form_page_inherited" model="ir.ui.view">
            <field name="name">website.visitor.view.form.inherit</field>
            <field name="model">website.visitor</field>
            <field name="priority">16</field>
            <field name="inherit_id" ref="website.website_visitor_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='last_connection_datetime']" position="after">
                    <field name="latest_revisit"/>
                </xpath>
            </field>
        </record>

        <record id="website_visitor_track_info_form" model="ir.ui.view">
            <field name="name">website.visitor.track.info.form</field>
            <field name="model">website.visitor.track.info</field>
            <field name="arch" type="xml">
                <form string="Website Visitor Track Info">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="visitor_id"/>
                            </group>
                        </group>
                        <notebook>
                        <page string="Website Visitor Track Info Line">
                            <field name="visitor_info_ids">
                                <form>
                                    <field name="track_info_id" invisible="1"/>
                                    <field name="page_id"/>
                                    <field name="track_id"/>
                                </form>
                                <tree string="Website Visitor Track Info Line" editable="bottom">
                                    <field name="track_info_id" invisible="1"/>
                                    <field name="page_id"/>
                                    <field name="track_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="website_visitor_track_tree" model="ir.ui.view">
            <field name="name">website.visitor.track.info.tree</field>
            <field name="model">website.visitor.track.info</field>
            <field name="arch" type="xml">
                <tree string="Website Visitor Track Info" create="0" edit="0">
                   <field name="visitor_id"/>
                </tree>
            </field>
        </record>

        <record id="website_visitors_track_info_action" model="ir.actions.act_window">
            <field name="name">Visitors Track Info</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">website.visitor.track.info</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_visitor_track_info_view_menu"
                  name="Visitors Tracks"
                  sequence="3"
                  parent="website.website_visitor_menu"
                  action="website_visitors_track_info_action"/>

    </data>
</odoo>
