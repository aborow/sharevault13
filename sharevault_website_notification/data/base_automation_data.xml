<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="website_track_notify_mail" model="base.automation">
            <field name="name">ShareVault: Website Track Notification </field>
            <field name="model_id" ref="website.model_website_track"/>
            <field name="trigger">on_create</field>
            <field name="active" eval="True"/>
            <field name="state">code</field>
            <field name="code">
if record:
    record.send_notify_mail()
            </field>
        </record>

        <record id="cron_website_track_info_mail_send" model="ir.cron">
            <field name="name">Sharevault: Send Notify mail for website track</field>
            <field name="model_id" ref="model_website_visitor_track_info"/>
            <field name="state">code</field>
            <field name="code">model.send_track_mail()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
