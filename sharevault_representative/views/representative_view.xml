<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sharevault_rep_form" model="ir.ui.view">
            <field name="name">Representative</field>
            <field name="model">sharevault.rep</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="abbr"/>
                        <field name="active"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="sharevault_rep_tree" model="ir.ui.view">
            <field name="name">Representative</field>
            <field name="model">sharevault.rep</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="abbr"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="sharevault_rep_action" model="ir.actions.act_window">
            <field name="name">Representative</field>
            <field name="res_model">sharevault.rep</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="sharevault_rep_menu"
            name="Representative"
            parent="sharevault.sharevault_menu_fields_root"
            action="sharevault_rep_action"
            sequence="10"/>
    </data>
</odoo>
