<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Representative added in Form View of Invoices-->
        <record id="account_move_from_inherit_for_rep" model="ir.ui.view">
            <field name="name">account.move.form.inherit.for.rep</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="rep_id"/>
                </xpath>
            </field>
        </record>
        <!--Representative added in Search View of Invoices-->
        <record id="account_move_groupby_search_inherit_for_rep" model="ir.ui.view">
            <field name="name">account.move.groupby.inherit.for.rep</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="sale.account_invoice_groupby_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="rep_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
