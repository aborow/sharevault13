<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Email Preferences Tab-->
        <record id="res_partner_from_inherit_for_ep_tab" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.for.ep.tab</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page id="ep_tab" string="Email Preferences" name="email_pref">
                        <group id="ep_tab_group">
                            <group>
                                <field name="email_preference_marketing"/>
                                <help for="email_preference_marketing"/>

                                <field name="email_preference_white_papers"/>
                                <field name="email_preference_events"/>
                            </group>
                            <group>
                                <field name="email_preference_blog"/>
                                <field name="email_preference_company_news"/>
                                <field name="email_preference_product_news"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <!--
                <xpath expr="//form/sheet/group/group/field[@name='title']" position="after">
                    <field name="email_unsubscribe_url" widget="url" invisible="0"/>
                </xpath>
                -->
            </field>
        </record>

        <!--
        <record id="mail.email_template_partner" model="mail.template">
            <field name="name">Partner Mass Mail</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="partner_to">${object.id}</field>
            <field name="user_signature" eval="True"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.lang}</field>
            <field name="body_html" type="html">
                <div>
                    <a href="${object.email_unsubscribe_url}">
                        Unsubscribe Mail
                    </a>
                </div>
            </field>
        </record>
        -->
    </data>
</odoo>
