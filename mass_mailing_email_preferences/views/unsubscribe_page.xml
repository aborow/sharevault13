<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="unsubscribe_page" name="Unsubscribe page">
        <div class="container o_unsubscribe_form">
            <div class="row">
                <div>
                    <center>
                        <h1 class="o_page_header">EMAIL PREFERENCES</h1>
                        <div id="subscription_info" style="color: #005326; background-color: #ccecdb; border-color: #b8e4cc; padding: 0.75rem 1.25rem; margin-left: 100px;
    margin-right: 100px;" role="status">
                            <b>
                                <p>You have been successfully updated email preferences in contact.
                                </p>
                            </b>
                        </div>
                    </center>
                </div>
            </div>
        </div>
    </template>

    <template id="unsubscribe_mass_mailing">
        <div class="container o_unsubscribe_form">
            <div class="row">
                <div id="div_blacklist" class="col-lg-6 offset-lg-3"
                        style="padding: 20px 40px; text-align: left;background-color: #f2f2f2; Font-family: Open Sans, Oxygen, Helvetica Neue,Helvetica,Arial,sans-serif;">
                    <t t-if="is_partner">
        				<form method="post" action="/updated/contact">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <input type="hidden" name="email" t-att-value="email"/>
        					<div class="page-header">
            					<h1 style="text-transform: capitalize;">Communication Preferences</h1>
            					<p><t t-esc="email"/></p>
            					<p>
                                    <h4 style="margin-bottom: 0px;">Subscription setting</h4>
            					     Manage subscription settings for <t t-esc="email"/>. If this is not your email address,
                                     please ignore this page since the email associated with this page was likely forwarded to you.
                                </p>
            					<p>
                                    <h4 style="margin-bottom: 0px;">Subscription interests</h4>
                                    Only send me communications for the following checked categories:
                                </p>
            				</div>
            				<div class="container" style="text-align: left; box-sizing: border-box;">
            					<div style="padding: 16px 0;">

                                    <div class="item">
                                        <div class="item-inner"
                                                style="background-color: #169ded;border:1px solid #169ded;color:#ffffff;overflow: hidden;margin-top: 0;padding: 10px 15px;border-radius: 8px;width: 350px;margin: 0 0 20;max-width: 100%;">
                                            <input type="checkbox" id="email_preference_marketing" name="email_preference_marketing"
                                                    style="width: 20px;margin-left:0;" t-att-checked="email_preference_marketing"
                                                    onclick="uncheck_opt_out(this.id)"/>
                                            <span style="font-weight:600;">Marketing Updates</span>
                                            <p style="margin-bottom:0;margin-top: 10px;padding-left: 26px;font-size: 14px;">
                                                Marketing offers and updates.
                                            </p>
                                        </div>
                                    </div>

                                    <div class="item">
                                        <div class="item-inner"
                                                style="background-color: #169ded;border:1px solid #169ded;color:#ffffff;overflow: hidden;margin-top: 0;padding: 10px 15px;border-radius: 8px;width: 350px;margin: 0 0 20;max-width: 100%;">
                                            <input type="checkbox" id="email_preference_white_papers" name="email_preference_white_papers"
                                                    style="width: 20px;margin-left:0;" t-att-checked="email_preference_white_papers"
                                                    onclick="uncheck_opt_out(this.id)"/>
                                            <span style="font-weight:600;">White Papers and Infographic</span>
                                            <p style="margin-bottom:0;margin-top: 10px;padding-left: 26px;font-size: 14px;">
                                                Relevant Industry news, resources and information.
                                            </p>
                                        </div>
                                    </div>

                                    <div class="item">
                                        <div class="item-inner"
                                                style="background-color: #169ded;border:1px solid #169ded;color:#ffffff;overflow: hidden;margin-top: 0;padding: 10px 15px;border-radius: 8px;width: 350px;margin: 0 0 20;max-width: 100%;">
                                            <input type="checkbox" id="email_preference_events" name="email_preference_events"
                                                    style="width: 20px;margin-left:0;" t-att-checked="email_preference_events"
                                                    onclick="uncheck_opt_out(this.id)"/>
                                            <span style="font-weight:600;">Events and Webinars</span>
                                            <p style="margin-bottom:0;margin-top: 10px;padding-left: 26px;font-size: 14px;">
                                                Relevant Industry events and thought leadership.
                                            </p>
                                        </div>
                                    </div>

                                    <div class="item">
                                        <div class="item-inner"
                                                style="background-color: #169ded;border:1px solid #169ded;color:#ffffff;overflow: hidden;margin-top: 0;padding: 10px 15px;border-radius: 8px;width: 350px;margin: 0 0 20;max-width: 100%;">
                                            <input type="checkbox" id="email_preference_blog" name="email_preference_blog"
                                                    style="width: 20px;margin-left:0;" t-att-checked="email_preference_blog"
                                                    onclick="uncheck_opt_out(this.id)"/>
                                            <span style="font-weight:600;">Blog Subscription</span>
                                            <p style="margin-bottom:0;margin-top: 10px;padding-left: 26px;font-size: 14px;">
                                                Timely updates with the latest blog posts.
                                            </p>
                                        </div>
                                    </div>

                                    <div class="item">
                                        <div class="item-inner"
                                                style="background-color: #169ded;border:1px solid #169ded;color:#ffffff;overflow: hidden;margin-top: 0;padding: 10px 15px;border-radius: 8px;width: 350px;margin: 0 0 20;max-width: 100%;">
                                            <input type="checkbox" id="email_preference_company_news" name="email_preference_company_news"
                                                    style="width: 20px;margin-left:0;" t-att-checked="email_preference_company_news"
                                                    onclick="uncheck_opt_out(this.id)"/>
                                            <span style="font-weight:600;">Company News &amp; Updates</span>
                                            <p style="margin-bottom:0;margin-top: 10px;padding-left: 26px;font-size: 14px;">
                                                News and Information related to ShareVault.
                                            </p>
                                        </div>
                                    </div>

                                    <div class="item">
                                        <div class="item-inner"
                                                style="background-color: #169ded;border:1px solid #169ded;color:#ffffff;overflow: hidden;margin-top: 0;padding: 10px 15px;border-radius: 8px;width: 350px;margin: 0 0 20;max-width: 100%;">
                                            <input type="checkbox" id="email_preference_product_news" name="email_preference_product_news"
                                                    style="width: 20px;margin-left:0;" t-att-checked="email_preference_product_news"
                                                    onclick="uncheck_opt_out(this.id)"/>
                                            <span style="font-weight:600;">Product News &amp; Updates</span>
                                            <p style="margin-bottom:0;margin-top: 10px;padding-left: 26px;font-size: 14px;">
                                                ShareVault news and product updates.
                                            </p>
                                        </div>
                                    </div>

    							</div>
        					</div>

        					<div class="page-header">
								<p style="margin-bottom: 10px;margin-top: 10px;	font-size: 18px;">Or check below to unsubscribe to all emails:</p>
								<div class="item">
									<div class="item-inner selected" style="margin-top: 0;width: 350px;max-width: 100%;margin: 0 0 20;">
                                        <input type="checkbox" id="opt_out" name="opt_out" t-att-checked="opt_out"
                                                onclick="uncheck_all()" style="width: 20px;margin-left:0;"/>
                                        <span style="font-weight:600;font-size:14px;">Unsubscribe me from all mailing lists.</span>
                                        <script>
                                            function uncheck_opt_out(clicked_id){
                                                if (document.getElementById(clicked_id).checked == true){
                                                    document.getElementById("opt_out").checked = false;
                                                }
                                            }

                                            function uncheck_all(){
                                                if (document.getElementById("opt_out").checked == true){
                                                    fields = [
                                                                'email_preference_marketing',
                                                                'email_preference_white_papers',
                                                                'email_preference_events',
                                                                'email_preference_blog',
                                                                'email_preference_company_news',
                                                                'email_preference_product_news'
                                                                ];
                                                    for (var i = 0; i &lt; fields.length; i++){
                                                        document.getElementById(fields[i]).checked = false;
                                                    }
                                                }
                                            }
                                        </script>
                                    </div>
                                </div>
                            </div>

                            <div style="text-align:left;">
                                <button type="submit" class="btn btn-primary"
                                        style="font-family: Open Sans, Oxygen, Helvetica Neue,Helvetica,Arial,sans-serif;padding: 13px 22px;background-color: #1a1a1a;text-decoration: none;color: #fff;font-weight: 400;font-size: 15px;display: inline-block;line-height: 24px;border:none;text-transform: uppercase;width: auto !important;margin-top: 30px; color: white;">
                                        UPDATE EMAIL PREFERENCES
            					</button>
    						</div>
        				</form>
                    </t>
        		</div>



